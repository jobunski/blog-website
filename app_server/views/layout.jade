doctype html
html (ng-app='locatorApp')
  head
    title Stories worth the Listen
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    link(rel='stylesheet', href='/css/main.css')
  body.is-preload
    #page-wrapper
      // Header
      #header
        // Logo
        h1
          a#logo(href='index.html')
            | Terrrific Stories
            em
        // Nav
        nav#nav
          ul
            li.current
              a(href='index.html') Home
            li
              a(href='#') Lifestyle
              ul
                li
                  a(href='#') Solitude
                li
                  a(href='#') Brotherhood
                li
                  a(href='#') Fantansies
                li
                  a(href='#') Universe
                  ul
                    li
                      a(href='#') Marvel
                    li
                      a(href='#') DC
                    li
                      a(href='#') Multi
                li
                  a(href='#') Class
            li
              a(href='about') About
            li
              a(href='right-sidebar.html') Girls
            li
              a(href='two-sidebar.html') Future
            li
              a(href='technology') Technology
        block content

      // Footer
      #footer
        .container
          .row
            section.col-3.col-6-narrower.col-12-mobilep
              h3 Links to Stuff
              ul.links
                li
                  a(href='#') Home
                li
                  a(href='#') Lifestyle
                li
                  a(href='about') About
                li
                  a(href='#') Girls

            section.col-3.col-6-narrower.col-12-mobilep
              h3 More Links to Stuff
              ul.links
                li
                  a(href='#') Psychology
                li
                  a(href='#') Future
                li
                  a(href='#') Universe
                li
                  a(href='technology') Technology
            section.col-6.col-12-narrower
              h3 Get In Touch
              form
                .row.gtr-50
                  .col-6.col-12-mobilep
                    input#name(type='text', name='name', placeholder='Name')
                  .col-6.col-12-mobilep
                    input#email(type='email', name='email', placeholder='Email')
                  .col-12
                    textarea#message(name='message', placeholder='Message', rows='5')
                  .col-12
                    ul.actions
                      li
                        input.button.alt(type='submit', value='Send Message')
        // Icons
        ul.icons
          li
            a.icon.fa-twitter(href='#')
              span.label Twitter
          li
            a.icon.fa-facebook(href='#')
              span.label Facebook
          li
            a.icon.fa-github(href='#')
              span.label GitHub
          li
            a.icon.fa-linkedin(href='#')
              span.label LinkedIn
          li
            a.icon.fa-google-plus(href='#')
              span.label Google+

        // Copyright
        .copyright
          ul.menu
            li Â©GettingMean. All rights reserved
            li | Design:
              a(href='#') NiagraFalls
    // Scripts
    script(src='/angular/angular.min.js')
    script(src='/angular/locatorApp.js')
    script(src='/js/jquery.min.js')
    script(src='/js/jquery.dropotron.min.js')
    script(src='/js/browser.min.js')
    script(src='/js/breakpoints.min.js')
    script(src='/js/util.js')
    script(src='/js/main.js')
